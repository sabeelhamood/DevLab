{
  "deploy": {
    "startCommand": "cd backend && npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure"
  },
  "build": {
    "buildCommand": "cd backend && npm install --omit=dev && npm run build"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3001"
  }
}
