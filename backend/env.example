# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:3001,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# PostgreSQL (Supabase) Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# MongoDB Atlas Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/devlab

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Temporary testing flags
DISABLE_COMPETITION_AUTH=true

# External APIs
GEMINI_API_KEY=your_gemini_api_key_here
SANDBOX_API_URL=https://your-sandbox-api-url.com
SANDBOX_API_KEY=your-sandbox-api-key

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:3002
CONTENT_STUDIO_URL=http://localhost:3003
ASSESSMENT_SERVICE_URL=http://localhost:3004
LEARNING_ANALYTICS_URL=http://localhost:3006
COURSE_BUILDER_URL=http://localhost:3007

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# GRPC Configuration
GRPC_PORT=50051

# Service Identification
SERVICE_NAME=devlab-backend
