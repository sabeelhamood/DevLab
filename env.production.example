# Production Environment Variables for DEVLAB Microservice
# Copy this file and set the actual values in your deployment platform

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
APP_NAME=DEVLAB Microservice
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (Railway/Production)
DATABASE_HOST=your-postgres-host.railway.app
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=devlab_production
DATABASE_URL=postgresql://postgres:password@host:5432/devlab_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache (Railway/Production)
REDIS_HOST=your-redis-host.railway.app
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:password@host:6379
REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=60m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================
# EduCore AI Services
AUTH_SERVICE_URL=https://auth.educore-ai.com/api
DIRECTORY_SERVICE_URL=https://directory.educore-ai.com/api
ASSESSMENT_SERVICE_URL=https://assessment.educore-ai.com/api
CONTENT_STUDIO_URL=https://content.educore-ai.com/api
LEARNING_ANALYTICS_URL=https://analytics.educore-ai.com/api
HR_REPORTING_URL=https://hr.educore-ai.com/api
CONTEXTUAL_ASSISTANT_URL=https://assistant.educore-ai.com/api

# AI Services
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
SANDBOX_API_URL=https://sandbox-api.educore-ai.com
SANDBOX_API_KEY=your-sandbox-api-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://devlab-frontend.vercel.app
CORS_CREDENTIALS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Connection Pooling
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEEDBACK=true
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_ANONYMOUS_COMPETITIONS=true
ENABLE_INSTRUCTOR_TOOLS=true
ENABLE_LEARNING_ANALYTICS=true

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================
# Railway
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your-railway-project-id

# Vercel
VERCEL_ENV=production
VERCEL_URL=https://devlab-frontend.vercel.app

# =============================================================================
# EXTERNAL API KEYS (if needed)
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
